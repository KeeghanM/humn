{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowJs": true, // Allow JS files
    "declaration": true, // Generate definitions
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false // Set to true if you want stricter type checking later
  },
  "include": ["./src"],
  "exclude": ["**/*/__tests__"]
}
