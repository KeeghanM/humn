{
  "name": "humn-vscode",
  "displayName": "Humn",
  "version": "1.3.2",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KeeghanM/humn.git"
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "vite build",
    "watch": "vite build --watch",
    "package": "vsce package"
  },
  "license": "MIT",
  "publisher": "HumanSideOfCode",
  "main": "./dist/extension.js",
  "activationEvents": [
    "onLanguage:humn"
  ],
  "description": "Syntax highlighting and language support for the Humn language",
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "grammars": [
      {
        "language": "humn",
        "scopeName": "source.humn",
        "path": "./syntaxes/humn.tmLanguage.json",
        "embeddedLanguages": {
          "text.html.basic": "html",
          "source.js": "javascript",
          "source.css": "css"
        }
      }
    ],
    "languages": [
      {
        "id": "humn",
        "aliases": [
          "Humn",
          "humn"
        ],
        "extensions": [
          ".humn"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/humn-light.svg",
          "dark": "./icons/humn-dark.svg"
        }
      }
    ]
  },
  "engines": {
    "vscode": "^1.70.0"
  },
  "devDependencies": {
    "semantic-release-vsce": "^6.0.18",
    "vite": "^7.2.6",
    "prettier-plugin-humn": "*"
  },
  "peerDependencies": {
    "prettier": "^3.7.3"
  }
}
