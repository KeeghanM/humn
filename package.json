{
  "name": "humn-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "dev": "npm run dev --workspaces --if-present",
    "qa:test": "npm run qa:test --workspaces --if-present",
    "release": "npx semantic-release",
    "prepare": "husky",
    "qa:format": "npx prettier . --write",
    "git-diff": "git log origin/main..HEAD --pretty=format:'%ad:: %s' > git-diff.txt && echo '\n----------\n' >> git-diff.txt && git diff origin/main...HEAD ':!*.lock' >> git-diff.txt"
  },
  "lint-staged": {
    "**/*": [
      "npx prettier . --write"
    ]
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e",
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.3",
    "prettier-plugin-sort-imports": "^1.8.8",
    "prettier-plugin-humn": "*",
    "semantic-release-monorepo": "^8.0.2",
    "vitest": "^4.0.15"
  }
}
